<!DOCTYPE html>
<html>
  <head>
    <title>SocialApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

  </head>

  <body>
  <%# Navigation Bar %>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">SOCIAL APP</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="<%= root_path %>">Home</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            POSTS
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="<%= posts_path%>">ALL POSTS</a></li>
            <li><a class="dropdown-item" href="<%= new_post_path%>">NEW POST</a></li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">AboutUS</a>
        </li>
      </ul>
      <% if user_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%= edit_user_registration_path%>">Edit Profile</a>
          </li>
          <li class="nav-item">
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light" %>
          </li>
        </ul>
      <% else %>
        <a href="<%= new_user_session_path %>" class="btn btn-outline-light">Sign In</a> |
        <a href="<%= new_user_registration_path %>" class="btn btn-outline-light">Register your Account</a>
      <% end %>
    </div>
  </div>
</nav>


<%# Alerts %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <% if notice.present? %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= notice %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <% if alert.present? %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= alert %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
   
    <%= yield %>

    



  </body>
</html>
